  "main": "index.js",
   "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --project=chromium --headed",
    "report": "playwright show-report",
    "docker:build": "docker build -t sylius-tests .",
    "docker:test": "docker run --rm -v %cd%:/tests --env-file .env sylius-tests npx playwright test",
    "compose:up": "docker compose up --abort-on-container-exit --exit-code-from tests",
    "compose:down": "docker compose down -v",
    "debug": "playwright test --project=chromium --debug"
  },
